<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Крамаренко Михаил Константинович\nБПИ234"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/Print"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вывести"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/Enter"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:hint="Введите текст"
        android:inputType="text"
        android:maxLines="1"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/Print"
        android:layout_toStartOf="@+id/Print"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/OutputCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Вы ввели:"
        android:textStyle="bold"
        android:textSize="20dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/Output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/OutputCaption"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"/>
</RelativeLayout>