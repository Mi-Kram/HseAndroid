<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Крамаренко Михаил Константинович\n234"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <Button
        android:id="@+id/ScaleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scale"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"/>

    <Button
        android:id="@+id/TranslateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shake"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ScaleButton"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:id="@+id/OpenCloseLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/TranslateButton"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/OpenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open"
            android:layout_marginEnd="5dp"/>

        <Button
            android:id="@+id/CloseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:layout_marginStart="5dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/Key"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/key"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/OpenCloseLayout"
        android:layout_marginTop="150dp"/>

    <ImageView
        android:id="@+id/Stone"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/stone"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/Key"
        android:layout_marginTop="-50dp"/>

</RelativeLayout>